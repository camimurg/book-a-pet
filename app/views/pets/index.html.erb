<div class="container-pets-index">

  <% @pets.each do |pet| %>
    <div class="card" style="width: 288px;">
      <div class="card-image-pet">
        <% if pet.picture.attached? %>
          <%= cl_image_tag pet.picture.key, height: 200, width: 200, crop: :fill %>
        <% end %>
      </div>
      <div class="card-body">
        <h3> <%= pet.name.capitalize %></h3>
        <div class="card-text-pet">
          <p class="card-text"> <strong>Species</strong>: <%= pet.species %> </p>
          <p class="card-text"> <strong>City</strong>: <%= pet.city %> </p>
        </div>
      </div>
      <%= link_to "", pet_path(pet), class: 'card-link' %>
    </div>
  <% end %>
  <!-- container -->
</div>
<div class="container">
  <div class="btn-center" style="justify-content: center;">
    <%= link_to "Share your Pet", new_pet_path %>
  </div>
</div>

