
<div class="container-title">
  <h2>All our pets</h2>
</div>
<div class="container-pets-index">

  <% @pets.each do |pet| %>
    <div class="card" style="width: 288px;">
      <div class="card-image-pet">
        <% if pet.picture.attached? %>
          <%= cl_image_tag pet.picture.key, height: 300, width: 400, crop: :fill %>
        <% end %>
      </div>
      <div class="card-body">
        <h3> <%=  pet.name %></h3>
        <p class="card-text"> <%= pet.species %> </p>
        <p class="card-text"> <%= pet.city %> </p>
      </div>
      <%= link_to "", pet_path(pet), class: 'card-link' %>
    </div>
  <% end %>
  <!-- container -->
  <div class="link">
    <%= link_to "Add your pet", new_pet_path %>  </div>
</div>

