<div class="container-index-appointments" >
  <h2 style="text-align: center; padding: 30px; font-family: 'Poppins'">All your Snuggle Sessions</h2>
    <!-- <div class="card-product"> -->
      <% @appointments.each do |appointment| %>

        <div class="card-appointment" >
          <div class="card-image">
            <%= cl_image_tag appointment.pet.picture.key, height: 200, width: 200, crop: :fill %>
          </div>


          <div class="card-body" style="margin-top: 28px">
            <p style="font-size: 20px; color: black"> <%= appointment.pet.name.capitalize %> </p>
            <p style="color: black"> <strong>Date of the snuggle:</strong> <%= appointment.date.to_s(:long_ordinal) %> </p>
            <p style="color: black"> <strong>Start time:</strong>  <%= appointment.start_time.strftime('%H:%M') %> </p>
            <p style="color: black"> <strong>End time:</strong>  <%= appointment.end_time.strftime('%H:%M') %> </p>

            <div class="btn-app">
                <%= link_to "View Snuggle", appointment_path(appointment) %>
            </div>
            <div class="btn-app">
                <%= link_to "Cancel Snuggle", appointment_path(appointment), method: :delete %>
            </div>
          </div>
        </div>
      <% end %>
</div>

